<form action="/categories/updateCategory"  method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="{{category.name}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10" >{{category.description}}
        </textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" name="submit" id="submit" value="Update"> 
    </div>
    <input type="hidden" name="id" value="{{{category._id}}}">
</form>
<a href="/categories/index" class="btn-btn-secondary">Back to index</a>
