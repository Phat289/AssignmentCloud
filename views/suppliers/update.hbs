<form action="/suppliers/updateSupplier"  method="POST">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="{{supplier.name}}">
    </div>
    <div class="form-group">
        <label for="description">Phone Number</label>
        <input type="text" name="phone" id="phone" class="form-control" value="{{supplier.phone}}" >
    </div>
    <div class="form-group">
        <label for="description">Email</label>
        <input type="text" name="email" id="email" class="form-control" value="{{supplier.email}}">
    </div>
    <div class="form-group">
        <label for="description">Address</label>
        <input type="text" name="address" id="address" class="form-control" value="{{supplier.address}}">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" cols="30" rows="10">{{supplier.description}}
        </textarea>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary" name="submit" id="submit" value="Update">
    </div>
    <input type="hidden" name="id" value="{{{supplier._id}}}">
</form>
<a href="/suppliers/index" class="btn-btn-secondary">Back to index</a>

